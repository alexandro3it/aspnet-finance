@model IEnumerable<ASPFinance.Models.CreditViewModel>

<h1>Créditos</h1>
<br />
<p>
	<a asp-action="Create">Lançar uma novo crédito</a>
</p>
<hr />
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.CreditDay)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descripton)
			</th>			
			<th>
				@Html.DisplayNameFor(model => model.Value)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CustomerName)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.CreditDay)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Descripton)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Value)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CustomerName)
				</td>
				<td>
					@Html.ActionLink("Alterar", "Edit", new { id = item.Id }) | @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
				</td>
			</tr>
		}
	</tbody>
</table>
<hr />